@model SignInModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
    <head>
        <title>Đăng nhập - NATSAdmin</title>
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/signin.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <script src="/js/inputValidationAppearance.js"></script>
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="container-fluid d-flex flex-column flex-fill justify-content-center w-100">
            <div class="row py-3 g-3 justify-content-center">
                <div class="col col-4 d-flex align-items-center">
                    <div class="block bg-white border border-primary-subtle
                                rounded-3 shadow-sm w-100 p-3">
                        <form asp-action="SignIn" asp-controller="Authentication"
                                method="post" class="d-none" id="signin-form"
                                novalidate></form>
                        <div class="form-group mb-3">
                            <div class="form-floating">
                                <input asp-for="UserName" type="text" form="signin-form"
                                        class="form-control" placeholder="" />
                                <label class="form-label">@Html.DisplayNameFor(model => model.UserName)</label>
                            </div>
                            <span asp-validation-for="UserName"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-floating">
                            <input asp-for="Password" type="password" form="signin-form"
                                    class="form-control" placeholder="" />
                                <label class="form-label">@Html.DisplayNameFor(model => model.Password)</label>
                            </div>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" form="signin-form" class="btn btn-primary w-100">
                                Đăng nhập
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>