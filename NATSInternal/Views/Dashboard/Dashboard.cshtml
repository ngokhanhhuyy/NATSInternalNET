@{
    Layout = "_Layout";
    ViewBag.PageName = "dashboard";
}

<div class="container-fluid d-flex flex-column justify-content-center">
    <div class="row mt-3 g-3">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 mb-3">
                <div class="block bg-body border border-default rounded-3 w-100 p-3">
                </div>
            </div>
        }
    </div>
    <div class="row g-3">
        <div class="col col-lg-3 col-md-5 col-sm-12 col-12 mb-3">
            <div class="block bg-body border border-default rounded-3 w-100 p-3">
            </div>
        </div>
        <div class="col col-lg-5 col-md-7 col-sm-12 col-12 mb-3">
            <div class="block bg-body border border-default rounded-3 w-100 p-3">
            </div>
        </div>
        <div class="col col-lg-4 col-md-12 col-sm-12 col-12 mb-3">
            <div class="block bg-body border border-default rounded-3 w-100 p-3">
            </div>
        </div>
    </div>
</div>

@section PageTitle { Bảng điều khiển }
@section Styles {
    <link href="/css/dashboard.css" rel="stylesheet" />
}
